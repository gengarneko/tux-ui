{
  "name": "tux-ui",
  "version": "0.0.0",
  "scripts": {
    "docs": "ladle serve",
    "build": "turbo run build",
    "build:base": "pnpm --filter \"@tux-ui/base\" build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepublish": "pnpm run build --scope=tsconfig && pnpm run changeset && pnpm run changeset:version",
    "release": "pnpm prepublish && pnpm run changeset:publish --access=public"
  },
  "dependencies": {
    "react": "^18.1.0",
    "react-dom": "^18.1.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.22.0",
    "@ladle/react": "^0.15.1",
    "eslint": "^8.16.0",
    "husky": "^8.0.1",
    "prettier": "^2.6.2",
    "turbo": "^1.2.9",
    "eslint-config-custom": "workspace:*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gengarneko/tux-ui.git"
  },
  "author": "GengarNeko",
  "license": "MIT"
}